{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"fourt/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image":"fourt/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"fourt/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"fourt/multi-nginx",
            "hostname":"nginx",
            "essential":true,              
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        }
    ]
}